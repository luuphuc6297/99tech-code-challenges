{
  "name": "crude-server-clean-architecture",
  "version": "1.0.0",
  "description": "Crude Server Clean Architecture with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "check-format": "prettier --check \"src/**/*.ts\"",
    "docker:build": "docker build -t resource-api .",
    "docker:run": "docker run -p 3000:3000 resource-api",
    "docker:compose": "docker-compose up",
    "docker:compose:build": "docker-compose up --build"
  },
  "keywords": [
    "crude",
    "server",
    "express",
    "clean-architecture",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "module-alias": "^2.2.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-sanitizer": "^1.0.6",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typedi": "^0.10.0",
    "winston": "^3.17.0",
    "bcrypt": "^5.1.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "@types/bcrypt": "^5.0.2"
  },
  "_moduleAliases": {
    "@core": "dist/core",
    "@modules": "dist/modules",
    "@shared": "dist/shared",
    "@config": "dist/config",
    "@infrastructure": "dist/infrastructure"
  }
}